            <!--*************************************************************************-->

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/licenseimage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/license_template"/>

                <TextView
                    android:id="@+id/name_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_ledium"
                    android:text="Kenny Streit"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_xxlarge" />

                <ImageView
                    android:id="@+id/flag_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_above="@+id/number_rl"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/xsmall"
                    android:src="@drawable/al_flag"/>

                <TextView
                    android:id="@+id/number_rl"
                    android:layout_below="@+id/name_rl"
                    android:layout_alignLeft="@id/name_rl"
                    style="@style/license_style"/>

                <TextView
                    android:id="@+id/type_rl"
                    android:layout_below="@+id/number_rl"
                    android:layout_alignLeft="@id/number_rl"
                    style="@style/license_style"/>

                <TextView
                    android:id="@+id/issuedate_rl"
                    android:layout_below="@+id/type_rl"
                    android:layout_alignLeft="@id/type_rl"
                    style="@style/license_style" />

                <TextView
                    android:id="@+id/expdate_rl"
                    android:layout_below="@+id/issuedate_rl"
                    android:layout_alignLeft="@id/name_rl"
                    style="@style/license_style" />

                <TextView
                    android:id="@+id/birthday_rl"
                    android:layout_below="@+id/expdate_rl"
                    android:layout_alignLeft="@id/name_rl"
                    style="@style/license_style" />

                <TextView
                    android:id="@+id/huntered_rl"
                    android:layout_below="@+id/birthday_rl"
                    android:layout_alignLeft="@id/name_rl"
                    style="@style/license_style" />

            </RelativeLayout>

