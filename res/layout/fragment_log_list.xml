<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        card_view:cardCornerRadius="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/card_color">

                <ImageView
                    android:id="@+id/log_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/medium"
                    android:layout_marginRight="@dimen/medium"
                    android:src="@drawable/choose_pic_img"/>

                <TextView
                    android:id="@+id/log_species"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/log_image"
                    android:gravity="center"
                    android:background="@color/background_material_light"
                    android:textSize="@dimen/ledium"
                    android:textStyle="bold"
                    android:text="Species: "/>

                <LinearLayout
                    android:id="@+id/log_attributes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/spacing_small"
                    android:layout_below="@id/log_species">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginRight="@dimen/small"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/log_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/small"
                            android:gravity="center"
                            android:text="Date: "/>

                        <TextView
                            android:id="@+id/log_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/small"
                            android:gravity="center"
                            android:text="Location: "/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginRight="@dimen/small"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/log_bait"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/small"
                            android:gravity="center"
                            android:text="Bait: "/>

                        <TextView
                            android:id="@+id/log_length"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/small"
                            android:gravity="center"
                            android:text="Length: "/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/log_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small"
                    android:layout_below="@id/log_attributes"
                    android:gravity="center"
                    android:textSize="@dimen/smedium"
                    android:text="Notes: "/>


            </RelativeLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>